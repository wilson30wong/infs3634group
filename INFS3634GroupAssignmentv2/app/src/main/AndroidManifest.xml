<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.infs3634groupassignmentv2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Pokemon Quiz"
        android:roundIcon="@drawable/pokeball"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.GameActivity"/>
        <activity android:name=".activities.QuizActivity"/>
        <activity android:name=".activities.QuizInProgressActivity"/>
        <activity android:name=".activities.PokedexActivity"/>
        <activity android:name=".activities.PokemonActivity"/>
        <activity android:name=".activities.FlashCardActivity"/>
        <activity android:name=".activities.QuizSplashscreenActivity"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>